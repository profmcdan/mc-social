{
  "name": "auth",
  "version": "1.0.0",
  "description": "Authentication Microservice for mc-social application",
  "main": "src/index.ts",
  "scripts": {
    "build": "npx tsc",
    "build:watch": "npx tsc --watch",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts . --fix",
    "test": "",
    "start": "node dist/index.js",
    "start:dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/src/index.js\"",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Daniel Ale",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.16",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-typescript": "^0.55.1",
    "husky": "^8.0.0",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4",
    "xo": "^0.53.1"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint .", "prettier --write .", "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
